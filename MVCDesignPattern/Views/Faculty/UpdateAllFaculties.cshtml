@using MVCDesignPattern.ViewModels
@model List<FacultyViewModel>
@{
	int j = 1;
}

<a asp-controller="Faculty" asp-action="AddFaculty" class="btn btn-sm btn-outline-primary">Add Faculty</a>


@if(Model != null && Model.Count > 0)
{
	<form method="post">
		<table class="table table-bordered table-warning">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name of faculty</th>
					<th>Designation</th>
					<th>Experience</th>
				</tr>
			</thead>
			<tbody>
				@* @for (int i = 0; i < Model.Length; i++)
		{
			<tr>
				<td>@(i+1)</td>
				<td>@Model[i].Name</td>
				<td>@Model[i].Designation</td>
				<td>@Model[i].Experience</td>
			</tr>
		} *@

				@foreach (var faculty in Model)
				{
					<tr>
						<td>@faculty.Id</td>
						<td>
							<input id="Name" name="Name" value="@faculty.Name" />
						</td>
						<td>
							<input id="Designation" name="Designation" value="@faculty.Designation" />
						</td>
						<td>
							<input id="Experience" name="Experience" value="@faculty.Experience" />
						</td>
					</tr>
				}
			</tbody>
		</table>
		<button type="submit" class="btn btn-outline-success">Update all faculties</button>
	</form>

}
else{
	<div class="alert alert-danger alert-dismissible fade show" role="alert">
		No record found
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}