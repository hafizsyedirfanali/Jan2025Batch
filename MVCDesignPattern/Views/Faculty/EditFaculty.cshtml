@using MVCDesignPattern.ViewModels
@model FacultyViewModel

<form method="post" asp-controller="Faculty" asp-action="EditFaculty">
	<input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input class="form-control" asp-for="Name">
    </div>
    <div class="mb-3">
        <label class="form-label">Experience</label>
        <input class="form-control" asp-for="Experience">
    </div>
    <div class="mb-3">
        <label class="form-label">Designation</label>
        <input class="form-control" asp-for="Designation">
    </div>
    <button type="submit" class="btn btn-primary">Save changes</button>
	<a asp-controller="Faculty" asp-action="FacultyList" class="btn btn-outline-primary">Back</a>
</form>