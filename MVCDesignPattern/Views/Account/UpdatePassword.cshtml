@{
    ViewData["Title"] = "Update Password";
}

@section Head {
    <style>
        .password-container {
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(45deg, #6C63FF, #3F3D56);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .password-box {
            background: rgba(255, 255, 255, 0.95);
            padding: 2rem;
            border-radius: 20px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 450px;
            transform: translateY(20px);
            opacity: 0;
            animation: slideUp 0.5s ease forwards;
        }

        .password-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .password-header h1 {
            color: #2C3E50;
            font-size: 2.2rem;
            margin-bottom: 0.5rem;
        }

        .password-header p {
            color: #7F8C8D;
            font-size: 1rem;
            line-height: 1.5;
        }

        .form-group {
            margin-bottom: 1.5rem;
            position: relative;
        }

        .form-group input {
            width: 100%;
            padding: 12px 35px 12px 12px;
            border: 2px solid #E0E0E0;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-group input:focus {
            border-color: #6C63FF;
            outline: none;
            box-shadow: 0 0 0 3px rgba(108, 99, 255, 0.2);
        }

        .form-group label {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #95A5A6;
            transition: all 0.3s ease;
            pointer-events: none;
            font-size: 1rem;
        }

        .form-group input:focus + label,
        .form-group input:not(:placeholder-shown) + label {
            top: -10px;
            left: 10px;
            font-size: 0.8rem;
            background-color: white;
            padding: 0 5px;
            color: #6C63FF;
        }

        .password-requirements {
            background: #F8F9FA;
            padding: 1rem;
            border-radius: 8px;
            margin: 1rem 0;
            font-size: 0.9rem;
        }

        .requirement-item {
            display: flex;
            align-items: center;
            margin: 0.5rem 0;
            color: #6C757D;
        }

        .requirement-item i {
            margin-right: 8px;
            font-size: 0.8rem;
        }

        .requirement-met {
            color: #28A745;
        }

        .update-button {
            width: 100%;
            padding: 12px;
            background: #6C63FF;
            border: none;
            border-radius: 8px;
            color: white;
            font-size: 1.1rem;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .update-button:hover {
            background: #5A52D5;
            transform: translateY(-2px);
        }

        .cancel-link {
            text-align: center;
            margin-top: 1rem;
        }

        .cancel-link a {
            color: #7F8C8D;
            text-decoration: none;
            font-size: 0.9rem;
            transition: color 0.3s ease;
        }

        .cancel-link a:hover {
            color: #6C63FF;
        }

        @@keyframes slideUp {
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .toggle-password {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #95A5A6;
            transition: color 0.3s ease;
        }

        .toggle-password:hover {
            color: #6C63FF;
        }
    </style>
}

<div class="password-container">
    <div class="password-box">
        <div class="password-header">
            <h1>Update Password</h1>
            <p>Choose a strong password to protect your account</p>
        </div>
        <form asp-action="UpdatePassword" asp-controller="Account" method="post">
            <div class="form-group">
                <input type="password" id="currentPassword" name="currentPassword" placeholder=" " required>
                <label for="currentPassword">Current Password</label>
                <i class="fas fa-eye toggle-password" data-target="currentPassword"></i>
            </div>
            <div class="form-group">
                <input type="password" id="newPassword" name="newPassword" placeholder=" " required>
                <label for="newPassword">New Password</label>
                <i class="fas fa-eye toggle-password" data-target="newPassword"></i>
            </div>
            <div class="form-group">
                <input type="password" id="confirmPassword" name="confirmPassword" placeholder=" " required>
                <label for="confirmPassword">Confirm New Password</label>
                <i class="fas fa-eye toggle-password" data-target="confirmPassword"></i>
            </div>

            <div class="password-requirements">
                <div class="requirement-item" id="length-req">
                    <i class="fas fa-circle"></i>
                    Minimum 8 characters
                </div>
                <div class="requirement-item" id="uppercase-req">
                    <i class="fas fa-circle"></i>
                    At least one uppercase letter
                </div>
                <div class="requirement-item" id="lowercase-req">
                    <i class="fas fa-circle"></i>
                    At least one lowercase letter
                </div>
                <div class="requirement-item" id="number-req">
                    <i class="fas fa-circle"></i>
                    At least one number
                </div>
                <div class="requirement-item" id="special-req">
                    <i class="fas fa-circle"></i>
                    At least one special character
                </div>
            </div>

            <button type="submit" class="update-button">Update Password</button>
            <div class="cancel-link">
                <a href="javascript:history.back()">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
    <script>
        
    </script>
}
