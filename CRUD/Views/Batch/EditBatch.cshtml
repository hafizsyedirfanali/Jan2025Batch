@model EditStudentViewModel

<form method="post" asp-controller="Student" asp-action="EditStudent">
	<input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label class="form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="ContactNo"></label>
        <input class="form-control" asp-for="ContactNo">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Email"></label>
        <input class="form-control" asp-for="Email">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Address"></label>
        <input class="form-control" asp-for="Address">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Age"></label>
        <input class="form-control" asp-for="Age">
		<span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save changes</button>
    <a asp-controller="Student" asp-action="Students" class="btn btn-outline-primary">Back</a>
</form>